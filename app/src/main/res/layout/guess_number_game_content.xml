<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/attemptsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remaining_attempts_label"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/inputNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="number"
            android:hint="@string/enter_number_hint"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:autofillHints="username"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <Button
            android:id="@+id/guessButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guess_button_text"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_placeholder"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/restartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/restart_button_text"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>